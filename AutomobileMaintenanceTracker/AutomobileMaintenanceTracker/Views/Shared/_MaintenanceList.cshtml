@model IPagedList<AutomobileMaintenanceTracker.ViewModels.MaintenanceViewModel>

<div id="maintenanceList">
    <div class="pagedList" data-amt-target="maintenanceList">
        @Html.PagedListPager(Model, page => Url.Action("List", new { page }), PagedListRenderOptions.MinimalWithItemCountText)


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Car")
                </th>
                <th>
                    @Html.DisplayName("Maintenance Date")
                </th>
                <th>
                    @Html.DisplayName("Comments")
                </th>
                <th>
                    @Html.DisplayName("Rating")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaintenanceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    @*<td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>*@
                </tr>
            }

        </table>
    </div>
</div>